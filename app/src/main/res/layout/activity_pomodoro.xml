<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    android:id="@+id/pomodoroCard"
    tools:context=".PomodoroActivity">

    <!-- ðŸ”™ Go Back Button (Top Left) -->

    <!-- ðŸ•’ Timer Text (Centered) -->

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F9B208"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="â† Go Back"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textColor="#F9B208"
        android:textSize="64sp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/titleSyllabus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ Syllabus"
        android:textColor="#F9B208"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="100dp" />

    <!-- ðŸ¯ Control Buttons (Bottom, below timer) -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTimer"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:backgroundTint="#F9B208"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnBreak"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Break"
            android:backgroundTint="#F9B208"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:backgroundTint="#F9B208"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:backgroundTint="#F9B208"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>