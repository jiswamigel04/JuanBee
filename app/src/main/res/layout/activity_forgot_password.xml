<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#FFF9C4"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:src="@android:drawable/ic_lock_idle_lock"
        android:contentDescription="Lock Icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        app:tint="#F9A825" />

    <!-- Title -->
    <TextView
        android:id="@+id/appTitle"
        android:text="ðŸ Reset Your Password"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#F9A825"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:text="Keep your hive secure!"
        android:textColor="#757575"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Old Password -->

    <!-- New Password -->
    <EditText
        android:id="@+id/securityPin"
        android:hint="Security PIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:textColorHint="#9E9E9E"
        android:gravity="center"
        android:inputType="textPassword"
        android:padding="12dp" />

    <EditText
        android:id="@+id/newPassword"
        android:hint="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:textColorHint="#9E9E9E"
        android:gravity="center"
        android:inputType="textPassword"
        android:padding="12dp" />


    <!-- Confirm Password -->
    <EditText
        android:id="@+id/confirmPassword"
        android:hint="Confirm New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:drawable/edit_text"
        android:textColorHint="#9E9E9E"
        android:gravity="center"
        android:inputType="textPassword"
        android:padding="12dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/savePasswordButton"
        android:text="Save New Password"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F9A825"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Back to Login -->
    <TextView
        android:id="@+id/backToLogin"
        android:text="â¬…ï¸ Back to Log In"
        android:textSize="14sp"
        android:textColor="#F9A825"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>



