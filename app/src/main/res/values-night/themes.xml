<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with no ActionBar -->
    <style name="Theme.JuanBee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color (optional, will be hidden in fullscreen) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Remove window title -->
        <item name="windowNoTitle">true</item>
        <!-- Make the app full screen, hiding the status bar -->
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
